import pandas as pd

# -----------------------------
# Load Campaign Data
# -----------------------------
data = {
    "Campaign": ["Email", "Social Media", "Search Ads"],
    "Spend": [100000, 150000, 200000],
    "Leads": [2000, 3500, 2800],
    "Conversions": [300, 400, 500],
    "Revenue": [450000, 500000, 800000]
}

df = pd.DataFrame(data)

# -----------------------------
# KPI Calculations
# -----------------------------
df["Conversion_Rate"] = df["Conversions"] / df["Leads"]
df["Cost_per_Conversion"] = df["Spend"] / df["Conversions"]
df["ROI"] = (df["Revenue"] - df["Spend"]) / df["Spend"]

df
